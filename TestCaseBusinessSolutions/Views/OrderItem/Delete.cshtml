@using TestCaseBusinessSolutions.Models


    @model OrderItem

    <form method="post" asp-action="DeletePost">
        <input asp-for="Id" hidden />
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Order</h2>
                <hr />
            </div>
            @*<div asp-validation-summary="All"></div>*@
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" disabled class="form-control" />
            
            </div>
             <div class="mb-3">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" disabled class="form-control" />
            
            </div>
             <div class="mb-3">
                <label asp-for="Unit"></label>
                <input asp-for="Unit" disabled class="form-control" />
            
            </div>
        
           
            <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary" style="width:150px">
                Back to list
            </a>
        </div>
    </form>
    @section Scripts
    {
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }

